<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:background="#2984EB"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/lib_icon_title_back_immersive"
            />
        <AutoCompleteTextView
            android:id="@+id/auto_search"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/whitebg_radius3"
            android:completionThreshold="1"
            android:drawableLeft="@mipmap/lib_icon_search"
            android:drawablePadding="5dp"
            android:hint="请输入您要搜索的内容"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="搜索"
            android:textColor="#000000"
            android:textSize="13dp" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_light_save"
                android:drawablePadding="@dimen/dp_3"
                android:text="热门搜索"
                android:textColor="#4d4d4d"
                android:textStyle="normal"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                />
            <View style="@style/VerticalLineStyle"
                />
            <com.sky.dongqiudi.dongqiudi.custom.ZFlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyword_fl"
                android:orientation="vertical" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:drawableLeft="@mipmap/icon_light_info"
                    android:drawablePadding="@dimen/dp_3"
                    android:text="搜索记录"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    />
                <!--清除-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clear_iv"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/icon_light_exit"
                    />
            </RelativeLayout>
            <com.sky.dongqiudi.dongqiudi.custom.ZFlowLayout
                android:id="@+id/history_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>